.footer
  .p
    span(style="margin-right: 5px") #{ theme.footbar.copyright }
    i.fa.fa-star
    span(style="margin-left: 5px") #{ theme.author }

  .by_farbox
    span(style="margin-right: 5px") Powered by
    a(href="https://hexo.io/zh-cn/", target="_blank") Hexo
    span(style="margin-right: 5px; margin-left: 5px") & Theme modified from
    a(href="https://github.com/Lhcfl/hexo-theme-anatolo", target="_blank") Anatolo

  .beian
    if theme.footbar.beian
      a(href="http://www.beian.miit.gov.cn/", target="_blank") #{ theme.footbar.beian }
      span(style="height: 10px; margin-left: 10px") |
    if theme.footbar.gongan
      img(src=url_for("images/gongan.png"), style="height: 10px; margin-left: 10px; position: relative; top: 1px")
      span(style="margin-left: 2px") #{ theme.footbar.gongan }
